@model List<User>
@{
    ViewData["Title"] = "Home Page";
}

<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - FirstWebProject</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/FirstWebProject.styles.css" asp-append-version="true" />
    </head>
    <body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FirstWebProject</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <div  class="container">
        <div class="text-center">
            <h1 class="display-4">Welcome to SSL WireLess</h1>
            <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>
        <br /><br />
        <div class="text-center">
            <a asp-controller="Home" asp-action="AddValue"><button><h1>Add Data</h1></button></a>
        </div>
        <div>
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div>
                    <div class="alert alert-success" role="alert">
                        @ViewBag.SuccessMessage
                    </div>
                </div>

            }

        </div>
        <br /><br />
        <div class="row">
            <table class="arrowes-table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Phone</th>

                    </tr>
                </thead>

                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>@user.Phone</td>
                            <td>
                                <form asp-action="Delete" asp-controller="Home" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                                </form>
                            </td>
                            <td>
                                <form asp-action="Update" asp-controller="Home" method="post">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit">Update</button>
                                </form>
                            </td>
                            <!-- Add more cells for other properties if needed -->
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - FirstWebProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    </body>
</html>

